{
  "$schema": "http://json-schema.org/schema#",

  "title": "Board",
  "type": "object",
  "properties": {
    "factoriesByRow": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": { "$ref": "ResourceFactory.json" }
        }
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "type": { "$ref": "Resource.json" }
      }
    },
    "selection": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["NO_SELECTION"]
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["FACTORY_SELECTION"]
            },
            "selection": {
              "type": { "$ref": "ResourceFactorySelection.json" }
            }
          },
          "required": ["type", "selection"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RESOURCE_SELECTION"]
            },
            "selection": {
              "type": "array",
              "items": {
                "type": { "$ref": "Resource.json" }
              }
            }
          },
          "required": ["type", "selection"],
          "additionalProperties": false
        }
      ]
    }
  },

  "required": ["factoriesByRow", "resources", "selection"]
}
