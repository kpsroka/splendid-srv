{
  "$schema": "http://json-schema.org/schema#",

  "title": "GameState",
  "type": "object",
  "properties": {
    "round": {
      "type": "number"
    },
    "board": {
      "type": { "$ref": "Board.json" }
    },
    "playerState": {
      "type": "array",
      "items": {
        "type": { "$ref": "PlayerState.json" }
      }
    }
  },
  "required": ["round", "board", "playerState"]
}
